generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  name          String
  position      String?        // "Goalkeeper", "Defender", "Midfielder", "Forward"
  skillLevel    Int            @default(5) // 1-10 rating
  availability  Availability[]
  matchPlayers  MatchPlayer[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Availability {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  dayOfWeek   Int      // 0 = Sunday, 1 = Monday, ..., 6 = Saturday
  startTime   String   // "18:00"
  endTime     String   // "20:00"
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, dayOfWeek, startTime]) // User can't have duplicate time slots
  @@index([userId])
}

model Venue {
  id           String   @id @default(cuid())
  name         String
  address      String
  city         String
  surface      String   // "Indoor Turf", "Outdoor Grass", etc.
  capacity     Int      // Max players
  pricePerHour Float?
  latitude     Float?   // For weather API later
  longitude    Float?
  matches      Match[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Match {
  id          String        @id @default(cuid())
  date        DateTime      // Date and time of match
  duration    Int           @default(90) // Duration in minutes
  venueId     String
  venue       Venue         @relation(fields: [venueId], references: [id])
  status      String        @default("scheduled") // "scheduled", "completed", "cancelled"
  notes       String?       // Optional notes about the match
  players     MatchPlayer[]
  createdById String        // Who created the match
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([venueId])
  @@index([date])
}

model MatchPlayer {
  id        String   @id @default(cuid())
  matchId   String
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  status    String   @default("pending") // "pending", "confirmed", "declined"
  team      String?  // "A" or "B" (assigned later)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([matchId, userId]) // User can't be added to same match twice
  @@index([matchId])
  @@index([userId])
}