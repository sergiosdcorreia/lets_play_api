generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  name          String
  position      String?
  skillLevel    Int            @default(5)
  availability  Availability[]
  matchPlayers  MatchPlayer[]
  matchEvents   MatchEvent[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Availability {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  dayOfWeek   Int      // 0 = Sunday, 1 = Monday, ..., 6 = Saturday
  startTime   String   // "18:00"
  endTime     String   // "20:00"
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, dayOfWeek, startTime]) // User can't have duplicate time slots
  @@index([userId])
}

model Venue {
  id           String   @id @default(cuid())
  name         String
  address      String
  city         String
  surface      String   // "Indoor Turf", "Outdoor Grass", etc.
  capacity     Int
  pricePerHour Float?
  latitude     Float?
  longitude    Float?
  matches      Match[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Match {
  id          String        @id @default(cuid())
  date        DateTime
  duration    Int           @default(90)
  venueId     String
  venue       Venue         @relation(fields: [venueId], references: [id])
  status      String        @default("scheduled")
  notes       String?
  players     MatchPlayer[]
  events      MatchEvent[]
  createdById String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([venueId])
  @@index([date])
}

model MatchPlayer {
  id        String   @id @default(cuid())
  matchId   String
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  status    String   @default("pending") // "pending", "confirmed", "declined"
  team      String?  // "A" or "B" (assigned later)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([matchId, userId]) // User can't be added to same match twice
  @@index([matchId])
  @@index([userId])
}

model MatchEvent {
  id        String   @id @default(cuid())
  matchId   String
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  playerId  String
  player    User     @relation(fields: [playerId], references: [id], onDelete: Cascade)
  eventType String   // "goal", "assist", "yellow_card", "red_card"
  minute    Int?     // Minute of the match when event occurred
  notes     String?  // Optional notes (e.g., "penalty", "free kick")
  createdAt DateTime @default(now())

  @@index([matchId])
  @@index([playerId])
  @@index([eventType])
}